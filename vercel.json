{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://malabon-pickleball-api.fly.dev/api/$1" },
    { "source": "/socket.io/(.*)", "destination": "https://malabon-pickleball-api.fly.dev/socket.io/$1" },
    { "source": "/warmup", "destination": "https://malabon-pickleball-api.fly.dev/warmup" },
    { "source": "/((?!api|.*\\..*).*)", "destination": "/" }
  ]
}
